<!DOCTYPE html>
<html>
<head>
  <title><%= title %> - TaskNest</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/stylesheets/style.css?v=<%= Date.now() %>">
</head>
<body>

<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
  <div class="container d-flex align-items-center justify-content-between">

    <!-- Logo + Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/tasknest-logo.png" class="logo-shadow" 
           style="width:50px; border-radius:22%; margin-right:10px;">
      <span class="h4 m-0">TaskNest</span>
    </a>

    <!-- Toggler (for mobile) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navigation Items -->
    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto">


        <% if (!user) { %>
          <!-- If NOT logged in -->
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
        <% } else { %>
          <!-- If logged in -->
          <li class="nav-item me-3"><a class="nav-link" href="/tasks">My Tasks</a></li>
          <li class="nav-item me-3"><a class="nav-link" href="/tasks/add">Add Task</a></li>
          <li class="nav-item" style="display: flex; align-items: center;">
            <form action="/logout" method="post" style="display:inline; margin:0;">
              <button type="submit" class="nav-link text-danger" style="background:none; border:none; padding:0; margin:0; line-height:inherit; font: inherit; cursor:pointer;">Logout</button>
            </form>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

