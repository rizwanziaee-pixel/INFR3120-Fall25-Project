<!-- views/auth/login.ejs -->
<%- include("../partials/header", { title: "Login" }) %>

<div class="content-wrapper">
  <div class="container" style="max-width: 500px;">
    <h2 class="text-center mb-4">Login to TaskNest</h2>

    <!-- Local Login Form -->
    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label">Username</label>
        <input name="username" class="form-control" placeholder="Enter username" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Password</label>
        <input name="password" type="password" class="form-control" placeholder="Enter password" required>
      </div>

      <button class="btn btn-primary w-100">Login</button>
    </form>

    <!-- Divider -->
    <div class="divider my-4">
      <span>Or continue with</span>
    </div>

    <!-- OAuth Provider Buttons -->
    <div class="oauth-buttons">
      <!-- Google Login -->
      <a href="/auth/google" class="btn btn-light w-100 mb-2 oauth-btn google-btn" title="Login with Google">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="oauth-icon">
          <circle cx="12" cy="12" r="10"></circle>
          <text x="12" y="15" text-anchor="middle" font-size="8" fill="currentColor">G</text>
        </svg>
        <span>Google</span>
      </a>
      
      <!-- GitHub Login -->
      <a href="/auth/github" class="btn btn-dark w-100 mb-2 oauth-btn github-btn" title="Login with GitHub">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" class="oauth-icon">
