        <span>GitHub</span>
      </a>
      
      <!-- Discord Login -->
      <a href="/auth/discord" class="btn w-100 oauth-btn discord-btn" title="Login with Discord" style="background-color: #5865F2; color: white; border-color: #5865F2;">
