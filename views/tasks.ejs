<%- include('partials/header') %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>All Tasks</h2>
    <% if (user) { %>
      <a href="/tasks/add" class="btn btn-success">+ Add Task</a>
    <% } %>
  </div>

  <% if (tasks.length === 0) { %>
    <div class="text-center py-5">
      <p class="text-muted">No tasks yet. Create your first task!</p>
      <% if (user) { %>
        <a href="/tasks/add" class="btn btn-primary mt-3">Create Task</a>
      <% } %>
    </div>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Task</th>
          <th>Due Date</th>
          <th>Category</th>
          <% if (user) { %>
            <th>Actions</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.due %></td>
            <td><%= task.category %></td>
            <% if (user) { %>
              <td>
                <a href="/tasks/edit/<%= task._id %>" class="btn btn-warning btn-sm">Edit</a>
                <form action="/tasks/delete/<%= task._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this task?')">Delete</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('partials/footer') %>